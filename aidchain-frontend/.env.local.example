# ============================================
# AidChain Frontend - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local files to version control

# ============================================
# Backend API Configuration
# ============================================
# URL of the Express.js backend server
NEXT_PUBLIC_API_URL=http://localhost:5000

# ============================================
# Hedera Configuration (Optional)
# ============================================
# If you want to interact with Hedera directly from frontend
# NEXT_PUBLIC_HEDERA_NETWORK=testnet
# NEXT_PUBLIC_HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# ============================================
# Analytics & Monitoring (Future)
# ============================================
# NEXT_PUBLIC_ANALYTICS_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# Feature Flags (Future)
# ============================================
# NEXT_PUBLIC_ENABLE_AI_ANONYMIZATION=false
# NEXT_PUBLIC_ENABLE_BLOCKCHAIN_VERIFICATION=true
