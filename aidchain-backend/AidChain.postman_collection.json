{
  "info": {
    "name": "AidChain API",
    "description": "Healthcare data sharing platform with blockchain integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "datasetId",
      "value": "",
      "type": "string"
    },
    {
      "key": "requestId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.jwt);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"role\": \"researcher\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.jwt);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Datasets",
      "item": [
        {
          "name": "Upload Dataset",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('datasetId', response.dataset.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "datasetName",
                  "value": "Sample Dataset",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "This is a sample dataset",
                  "type": "text"
                },
                {
                  "key": "access",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "0",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/datasets",
              "host": ["{{baseUrl}}"],
              "path": ["datasets"]
            }
          }
        },
        {
          "name": "List All Datasets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/datasets",
              "host": ["{{baseUrl}}"],
              "path": ["datasets"]
            }
          }
        },
        {
          "name": "Get Dataset Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/datasets/{{datasetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["datasets", "{{datasetId}}"]
            }
          }
        },
        {
          "name": "Get My Datasets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/datasets/my/uploads",
              "host": ["{{baseUrl}}"],
              "path": ["datasets", "my", "uploads"]
            }
          }
        },
        {
          "name": "Download Dataset",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/datasets/{{datasetId}}/download",
              "host": ["{{baseUrl}}"],
              "path": ["datasets", "{{datasetId}}", "download"]
            }
          }
        },
        {
          "name": "Delete Dataset",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/datasets/{{datasetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["datasets", "{{datasetId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Access Requests",
      "item": [
        {
          "name": "Request Access",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('requestId', response.request.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"datasetId\": \"{{datasetId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/requests",
              "host": ["{{baseUrl}}"],
              "path": ["requests"]
            }
          }
        },
        {
          "name": "Get My Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/my",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "my"]
            }
          }
        },
        {
          "name": "Get Pending Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/pending",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "pending"]
            }
          }
        },
        {
          "name": "Get Dataset Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/dataset/{{datasetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "dataset", "{{datasetId}}"]
            }
          }
        },
        {
          "name": "Approve Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/{{requestId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "{{requestId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Request",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/{{requestId}}",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "{{requestId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    }
  ]
}
